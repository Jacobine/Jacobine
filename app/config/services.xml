<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    
    <imports>
        <import resource="services/commands.xml" />
        <import resource="services/consumer.xml" />
        <import resource="services/logger.consumer.xml" />
        <import resource="services/helper.xml" />
        <import resource="services/dependency-injection.xml" />
        <import resource="services/pear.xml" />
    </imports>

    <services>
        <!-- Jacobine Console Application -->
        <service id="console_application" class="Symfony\Component\Console\Application">
            <argument>%application.name%</argument>
            <argument>%application.version%</argument>
        </service>
    </services>

</container>
